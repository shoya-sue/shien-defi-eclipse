# Eclipse DeFi Tools - Environment Variables
# Copy this file to .env.local and configure the values for your environment

# =============================================================================
# Eclipse Blockchain Configuration
# =============================================================================

# Eclipse RPC endpoint
REACT_APP_ECLIPSE_RPC_URL=https://mainnetbeta-rpc.eclipse.xyz

# Eclipse WebSocket endpoint for real-time updates
REACT_APP_ECLIPSE_WS_URL=wss://mainnetbeta-rpc.eclipse.xyz

# =============================================================================
# DEX API Endpoints (Optional - will use mock APIs if not provided)
# =============================================================================

# Jupiter Aggregator API
REACT_APP_JUPITER_API_URL=https://quote-api.jup.ag/v6

# Orca DEX API
REACT_APP_ORCA_API_URL=https://api.orca.so/v1

# Raydium DEX API
REACT_APP_RAYDIUM_API_URL=https://api.raydium.io/v2

# =============================================================================
# Application Configuration
# =============================================================================

# Application name (displayed in the UI)
REACT_APP_APP_NAME="Eclipse DeFi Tools"

# Application version
REACT_APP_VERSION=1.0.0

# Environment (development, staging, production)
REACT_APP_ENVIRONMENT=development

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable real-time price updates
REACT_APP_ENABLE_REALTIME=true

# Enable farming features
REACT_APP_ENABLE_FARMING=true

# Enable P&L tracking
REACT_APP_ENABLE_PNL_TRACKING=true

# Enable tax reporting
REACT_APP_ENABLE_TAX_REPORTING=true

# =============================================================================
# Analytics and Monitoring (Optional)
# =============================================================================

# Google Analytics tracking ID
# REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# =============================================================================
# Development Settings (Development only)
# =============================================================================

# Enable debug mode
REACT_APP_DEBUG=false

# Enable mock data for development
REACT_APP_USE_MOCK_DATA=false

# Mock API delay (milliseconds)
REACT_APP_MOCK_DELAY=1000

# =============================================================================
# Security Settings
# =============================================================================

# CORS allowed origins (comma-separated)
# REACT_APP_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate limiting (requests per minute)
REACT_APP_RATE_LIMIT=60